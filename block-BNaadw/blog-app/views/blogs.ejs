<%- include('partial/header') %>
<!--Main-->
<main class="blogs">
  <section
    style="padding-top: 2rem"
    class="container flex justify-around align-center"
  >
    <a href="/"><button class="btn btn-primary">Go Back</button></a>
    <a href="/blogs/new"><button class="btn btn-primary">Add Blog</button></a>
  </section>
  <section
    class="blogsList container flex justify-center align-start flex-column"
  >
    <% if(blogs.length){ blogs.forEach(blog=>{ %>
    <article class="blog">
      <h2><%= blog.title %></h2>
      <p><%= blog.description %></p>
      <a href="/blogs/<%= blog._id %>">
        <button class="btn btn-primary">Read</button>
      </a>
    </article>
    <% }); }else{ %>
    <h2 style="text-align: center; width: 100%; margin-top: 1rem">
      No Blogs Yet
    </h2>
    <% } %>
  </section>
</main>
